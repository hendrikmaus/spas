{
  "name": "hmaus/spas",
  "description": "API end-to-end testing",
  "license": "MIT",
  "authors": [
    {
      "name": "Hendrik Maus",
      "email": "aidentailor@gmail.com"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": ">=7.0",
    "fezfez/php-json-schema-generator": "dev-master",
    "guzzlehttp/guzzle": "^6.2",
    "hmaus/reynaldo": "^0.1.1",
    "hmaus/spas-parser": "^0.1.0",
    "jonnyw/php-phantomjs": "^4.5",
    "justinrainbow/json-schema": "^2.0",
    "monolog/monolog": "^1.21",
    "sebastian/diff": "^1.4",
    "symfony/config": "^3.1",
    "symfony/console": "^3.1",
    "symfony/dependency-injection": "^3.1",
    "symfony/event-dispatcher": "^3.1",
    "symfony/filesystem": "^3.1",
    "symfony/http-foundation": "^3.1",
    "symfony/monolog-bridge": "^3.1"
  },
  "require-dev": {
    "codeclimate/php-test-reporter": "^0.3",
    "codegyre/robo": "1.0.0-RC2",
    "henrikbjorn/lurker": "dev-master",
    "hmaus/drafter-installer": "^1.0",
    "hmaus/drafter-php": "^4.0",
    "hmaus/spas-parser-apib": "^0.1.1",
    "phpunit/phpunit": "^5.0",
    "symfony/var-dumper": "^2.0|^3.1"
  },
  "autoload": {
    "psr-4": {
      "Hmaus\\Spas\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Hmaus\\Spas\\Tests\\": "tests"
    }
  },
  "bin": [
    "bin/spas"
  ],
  "config": {
    "sort-packages": true
  },
  "extra": {
    "drafter-installer-tag": "v3.1.3"
  },
  "scripts": {
    "clean": "rm -rf vendor/ composer.lock; exit 0",
    "test": "vendor/bin/phpunit",
    "quicktest": "vendor/bin/phpunit --no-coverage",
    "install-drafter": "Hmaus\\Drafter\\Installer::installDrafter",
    "install-phantomjs": "PhantomInstaller\\Installer::installPhantomJS",
    "post-install-cmd": [
      "@install-drafter",
      "@install-phantomjs"
    ],
    "post-update-cmd": [
      "@install-drafter",
      "@install-phantomjs"
    ]
  }
}
